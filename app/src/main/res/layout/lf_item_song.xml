<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgDelete"
            android:src="@drawable/ic_bclose"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/txtNameSongLF"
            android:text="Name Song"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:layout_toEndOf="@id/imgDelete"
            android:layout_toStartOf="@id/iconMenuLF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtArtistLF"
            android:text="Artist"
            android:textColor="@color/colorTextSecondary"
            android:textSize="12sp"
            android:layout_toEndOf="@id/imgDelete"
            android:layout_below="@id/txtNameSongLF"
            android:layout_toStartOf="@id/iconMenuLF"
            android:maxLines="1"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iconMenuLF"
            android:src="@drawable/ic_menu"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>